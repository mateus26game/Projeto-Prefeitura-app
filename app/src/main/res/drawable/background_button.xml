<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape>
            <solid android:color="#E0E0E0"/> <!-- Cor da sombra -->
            <corners android:radius="10dp"/>
            <padding android:left="3dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/>
        </shape>
    </item>

    <!-- BotÃ£o com borda -->
    <item android:bottom="3dp"> <!-- Desloca para cima para simular a sombra -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Cor branca -->
            <stroke
                android:width="1dp"
                android:color="#000000"/> <!-- Borda preta -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>
